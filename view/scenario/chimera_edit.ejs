<%
implement('layouts/chimera');

Router.setBreadcrumb([
	{title: __('chimera', 'Dashboard'), route: 'chimera@Dashboard'},
	{title: 'Scenario', route: 'chimera@ActionLink', parameters: {controller: 'scenario', action: 'index'}},
	{title: scenario.name || scenario._id, route: 'chimera@IdActionLink', parameters: {controller: 'scenario'}}
]);

start('chimera-status');
end('chimera-status');

style(['element/scenario', 'chimera/scenario']);
script('chimera/scenario_editor');

start('chimera-cage') %>
<alchemy-scenario
	scenario-id={% scenario._id %}
	#components={% components %}
	#value={% scenario %}
></alchemy-scenario>
<% end('chimera-cage') %>